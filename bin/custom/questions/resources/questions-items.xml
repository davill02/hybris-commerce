<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="items.xsd">

    <relations>
        <relation code="Product2Question" localized="false">
            <sourceElement type="Product" cardinality="one" qualifier="product">
                <modifiers read="true" write="true" search="true" optional="false"/>
            </sourceElement>
            <targetElement type="Question" cardinality="many" qualifier="questions" ordered="false">
                <modifiers read="true" write="true" search="true" optional="true" partof="true"/>
            </targetElement>
        </relation>
    </relations>

    <itemtypes>

        <itemtype code="Question" autocreate="true" generate="true">
            <deployment table="Questions" typecode="30274"/>
            <attributes>
                <attribute qualifier="code" type="java.lang.String">
                    <persistence type="property"/>
                    <modifiers unique="true"/>
                </attribute>
                <attribute qualifier="question" type="java.lang.String">
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="answer" type="java.lang.String">
                    <persistence type="property"/>
                    <modifiers optional="true"/>
                </attribute>
                <attribute qualifier="questionCustomer" type="Customer">
                    <persistence type="property"/>
                    <modifiers optional="false"/>
                </attribute>
                <attribute qualifier="answerCustomer" type="Customer">
                    <persistence type="property"/>
                    <modifiers optional="true"/>
                </attribute>
            </attributes>
        </itemtype>

        <itemtype code="QuestionsCMSComponent" generate="true"
                  extends="AbstractCMSComponent" abstract="false"
                  jaloclass="org.questions.jalo.components.QuestionsCMSComponent">
            <description>It shows customer questions about product.</description>
            <attributes>

                <attribute qualifier="numberOfQuestionsToShow" type="java.lang.Integer">
                    <persistence type="property"/>
                    <modifiers optional="false"/>
                    <defaultvalue>3</defaultvalue>
                </attribute>
                <attribute qualifier="fontSize" type="java.lang.Integer">
                    <persistence type="property"/>
                    <modifiers optional="false"/>
                    <defaultvalue>14</defaultvalue>
                </attribute>
            </attributes>
        </itemtype>

    </itemtypes>
</items>
