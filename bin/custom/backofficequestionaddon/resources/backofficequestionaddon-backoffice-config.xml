<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<config xmlns="http://www.hybris.com/cockpit/config"
        xmlns:y="http://www.hybris.com/cockpit/config/hybris"
        xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config"
        xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree"
        xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea"
        xmlns:list-view="http://www.hybris.com/cockpitng/component/listView"
        xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch"
        xmlns:simple-search="http://www.hybris.com/cockpitng/config/simplesearch">

	<context component="explorer-tree" module="backofficequestionaddon" merge-by="module">
        <explorer-tree:explorer-tree>
            <explorer-tree:navigation-node id="Question Addon">
                <explorer-tree:type-node id="Questions" code="Question"/>
            </explorer-tree:navigation-node>
        </explorer-tree:explorer-tree>
	</context>

    <context type="Question" component="listview" merge-by="type">
        <list-view:list-view>
            <list-view:column qualifier="product"/>
            <list-view:column qualifier="questionCustomer"/>
            <list-view:column qualifier="answerCustomer"/>
        </list-view:list-view>
    </context>

    <context type="Question" component="advanced-search" merge-by="type">
        <advanced-search:advanced-search>
            <advanced-search:field-list>
                <advanced-search:field name="questionCustomer" operator="equals" selected="true"/>
                <advanced-search:field name="product" operator="equals" selected="true"/>
            </advanced-search:field-list>
        </advanced-search:advanced-search>
    </context>
    <context type="Question" component="editor-area"> 
        <editorArea:editorArea>
            <editorArea:essentials>
                <editorArea:essentialSection name="hmc.question.essential">
                    <editorArea:attribute qualifier="product"/>
                    <editorArea:attribute qualifier="questionCustomer"/>
                </editorArea:essentialSection>
            </editorArea:essentials>
        </editorArea:editorArea>
    </context>

    <context type="Question" component="editor-area" merge-by="type">
        <editorArea:editorArea>
            <editorArea:tab name="hmc.question">
                <editorArea:section
                        name="hmc.question.section.questions.and.answers">
                    <editorArea:attribute qualifier="question"/>
                    <editorArea:attribute qualifier="answer"/>
                </editorArea:section>
            </editorArea:tab>
        </editorArea:editorArea>
    </context>

    <context type="Question" component="create-wizard">
        <wz:flow  id="QuestionWizard" title="create.title.question">
            <wz:prepare id="titlePrepare">
                <wz:initialize property="newQuestion" type="Question"/>
            </wz:prepare>
            <wz:step id="step1" sublabel="Create a new Question" label="Question">
                <wz:content id="step1.content">
                    <wz:property-list root="newQuestion">
                        <wz:property qualifier="code" type="java.lang.String"/>
                        <wz:property qualifier="question" type="java.lang.String"/>
                        <wz:property qualifier="questionCustomer" type="Customer"/>
                        <wz:property qualifier="answer" type="java.lang.String"/>
                        <wz:property qualifier="answerCustomer" type="Customer"/>
                        <wz:property qualifier="product" type="Product"/>
                    </wz:property-list>
                </wz:content>
                <wz:navigation id="step1.navigation">
                    <wz:cancel/>
                    <wz:done visible="!#empty(newQuestion.code) and newQuestion.question != null and newQuestion.questionCustomer != null">
                        <wz:save property="newQuestion"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
        </wz:flow>
    </context>
</config>
