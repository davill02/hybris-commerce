#end

<html>

<body bgcolor="#ffffff">

<table width="100%" border="1" align="center" cellpadding="0" cellspacing="0" bordercolor="#bfc1c0" class="products">
    <thead>
    <tr>
        <td>Product code</td>
        <td>Question code</td>
        <td>Question</td>
        <td>Answer</td>
    </tr>
    </thead>
    <tbody>
        #foreach($questionData in ${ctx.questions})
        <tr>
            <td>$questionData.productCode</td>
            <td>$questionData.questionCode</td>
            <td>$questionData.question</td>
            <td>$questionData.answer</td>
        </tr>
        #end
    </tbody>
</table>


</body>
</html>